DATABASE_URL="postgres://root:mysecretpassword@localhost:5432/local"

# Better Auth
BETTER_AUTH_SECRET=your-secret-key-here
BETTER_AUTH_URL=http://localhost:5173

# SMTP Configuration for sending emails
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-password
SMTP_FROM='YourApp <noreply@example.com>'

# Development Email Override
# When set, ALL emails in development will be sent to this address instead
# The original recipient will be shown in the email subject and body
# Leave empty to send emails to actual recipients even in dev
DEV_EMAIL_OVERRIDE=dev@example.com

# Environment
NODE_ENV=development
