DATABASE_URL="postgres://root:mysecretpassword@localhost:5432/local"

# Better Auth
BETTER_AUTH_SECRET=your-secret-key-here
BETTER_AUTH_URL=http://localhost:5173

# SMTP Configuration for sending emails
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-password
SMTP_FROM='YourApp <noreply@example.com>'

# Development Email Override
# When set, ALL emails in development will be sent to this address instead
# This includes: user invites, verification emails, AND scheduled notifications
# The original recipient will be shown in the email subject and body
# Leave empty to send emails to actual recipients even in dev
# Perfect for testing notifications without spamming real users!
DEV_EMAIL_OVERRIDE=dev@example.com

# Cron Job Authentication
# Secret key for authenticating scheduled task requests from Coolify
# Generate a secure random string for production: openssl rand -base64 32
# Used by all scheduled notification endpoints
CRON_SECRET=your-secure-cron-secret-change-this

# Environment
NODE_ENV=development
